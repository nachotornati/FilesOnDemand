                        <img id="myImg" src="/img/products/<%= product.image %>" class="imgproduct" alt="Image">
                        <h3><%= product.title %> </h3>
                        <h4>$<%= product.price %></h4>
                    </article>
                </a>
                
                <% }) %>    
                
            </section>
            
 
<!--fin todos los producto -->

     <!-- footer -->    
     <%- include('partials/footer') %>
