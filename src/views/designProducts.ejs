    <!-- header -->
    <%- include('partials/header') %>
    <!--fin del header -->

<!--inicio todos los producto -->

<h1>Archivos de Dise√±o</h1>
    
        <section class="grid-container">
            <% products.forEach(product => { %>
                <a href="/products/detail/<%= product.id %>">
