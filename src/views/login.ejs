<!DOCTYPE html>
<html lang="en">
 <!-- head general -->
 <%- include('partials/head', {title: 'FOD'}) %>

 <!-- link css -->
    <link rel="stylesheet" href="/styles/login.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

<body>
      <!-- header -->
      <%- include('partials/header') %>
      <!--fin del header -->

    <!-- main section -->

    <section class="main-section-login">
    
        <section class="login-section">
                

                <div class="login-title">

                    <div class="login-picture">

                        <img src="\img\login-icon.png" alt="logo" class= "logo">

                    </div>
                
                <p>Iniciar Sesión</p>
                
                </div>

            <form class="input-fields" method="POST" action="/users/login">

                <% if (typeof(error) != 'undefined') { %>
                
                    <p class="error_message"><%= "El usuario y/o contraseña es incorrecto" %> </p>
                <% } %>

                <input class="input-decoration" type="email" placeholder="E-mail" name="email" value=<% if (typeof(error) != 'undefined') { %> <%= old.email %>  <% } %>>
                <input class="input-decoration" type="password" placeholder="Contraseña" name="password">
                <a href="">¿Olvidaste tu contraseña?</a>
                
                <div class="remember_me_box">
                <input type="checkbox" name="rememberMe">
                <span class="remember_me">Recordarme</span>
                </div>
                <button class="submit-button">Iniciar Sesión</button>

                
                
            </form>










        </section>


    </section>

    <!-- fin main section -->

       <!-- footer -->    
       <%- include('partials/footer') %>
       <!-- fin del footer -->  



</body>
</html>